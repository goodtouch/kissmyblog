<div class="page">
  <div class="container">
    <% unless @drafts.blank? %>
      <h1>Drafts <small>(<%= @drafts.count %> drafts)</small><%= link_to 'Create a new blog post', new_repository_draft_path(@repository.id), class: 'btn btn-primary pull-right', role: 'button' %></h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>

        <tbody>
          <% @drafts.each do |post| %>
            <tr>
              <td><%= link_to post.name, repository_draft_path(@repository.id, post.name) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

    <h1>Posts <small>(<%= @posts.count %> published posts)</small><% if @drafts.blank? %><%= link_to 'Create a new blog post', new_repository_draft_path(@repository.id), class: 'btn btn-primary pull-right', role: 'button' %><% end %></h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.name, repository_post_path(@repository.id, post.name) %></td>
            <%#= raise post.inspect %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>