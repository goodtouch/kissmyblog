<!DOCTYPE html>
<html>
<head>
  <title>KISS my BLOG</title>
  <meta charset="utf-8">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :modernizr %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'KISS my BLOG', root_path, class: 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if @repository %>
            <%= active_link_to 'Posts', repository_posts_path(@repository.id), :wrap_tag => :li %>
            <%= active_link_to 'Images', repository_images_path(@repository.id), :wrap_tag => :li %>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>

  <%= yield %>

  <div id="modals">
    <%= yield :modals %>
  </div>
</body>
</html>
